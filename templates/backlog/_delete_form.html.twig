<form method="post" action="{{ path('app_backlog_delete', {'uuid': backlog.uuid}) }}" onsubmit="return confirm('Are you sure you want to delete this backlog?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ backlog.id) }}">
    <button class="btn btn-delete-backlog">Delete backlog</button>
</form>
